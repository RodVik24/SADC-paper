% --- Zehner-Potenzen
 \gdef\EE{\@ifnextchar*{\@EE}{\cdot\@EE*}}
 \gdef\@EE*#1{\def\@tempa{#1}\def\@tempb{1}\ifx\@tempa\@tempb 10 \else 10^{#1} \fi}

% --- Mengen-Bezeichner
 \gdef\IN{\mathrm {I\kern-.18em N}}
